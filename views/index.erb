<% if @author %>
  <h3>Welcome, <%= @author.name1 %>, you party planner extraordinarie!</h3>
<% elsif @editor %>
  <h1>Welcome, <%= @editor.name1 %>, you party animal you!</h1>
<% else %>
  <h4 class="main-copy">Have a party idea? Please login or create an account to edit or create an article.</h4>
<% end %>

<div>
  <img id="logo" src="/img/logowhite.jpg" alt="Patzo Party">
</div>

<% if @author %>
  <p><a href="/new_article">Create a new article</a></p>
  <p><a href="/authors">Author List</a></p>  
  <form action="/author_sessions" method="POST">
    <input type="hidden" name="_method" value="delete">
    <button class="button">Log Out</button>
  </form>
<% elsif @editor %>
  <p><a href="/editors">Editor List</a></p>
  <form action="/editor_sessions" method="POST">
    <input type="hidden" name="_method" value="delete">
    <button class="button">Log Out</button>
  </form>
<% else %>
    <p><a class="nav" href="/login_author">Author Log In</a>
    <a class="nav" href="/new_author">Author Sign Up!</a>
    <a class="nav" href="/login_editor">Editor Log In</a>
    <a class="nav" href="/new_editor">Editor Sign Up!</a></p>
<% end %>
